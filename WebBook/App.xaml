<Application x:Class="WebBook.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WebBook"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             StartupUri="WindowForm/Authorization.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="StyleCheck" Source="StyleUI/CheckBoxCustom.xaml"/>
                <ResourceDictionary x:Name="StyleButton" Source="StyleUI/ButtonCustom.xaml"/>
                <ResourceDictionary x:Name="StyleControlForm" Source="StyleUI/ButtonControlFormCustom.xaml"/>
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
